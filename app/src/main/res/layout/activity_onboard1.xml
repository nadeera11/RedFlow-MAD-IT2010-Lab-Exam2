        app:layout_constraintEnd_toEndOf="parent">-->

        <!-- Layered content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Illustration at the top -->

            <!-- Curved light panel behind the bottom content -->

            <ImageView
                android:id="@+id/ivIllustration"
                android:layout_width="match_parent"
                android:layout_height="482dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:paddingStart="24dp"
                android:paddingTop="24dp"
                android:paddingEnd="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/onboard1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:src="@drawable/bg_bottom_arc"
                android:contentDescription="@null" />

            <!-- Headline + subtext -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="88dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discover Donor Based\nOn Blood Type"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#131313" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting"
                    android:textAlignment="center"
                    android:textColor="#7A7A7A"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Bottom controls row -->
            <LinearLayout
                android:id="@+id/bottomControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:textColor="#6F6F6F"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- page dots -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="8dp"
                        android:src="@drawable/dot_active" />

                    <Space android:layout_width="6dp" android:layout_height="8dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/dot_inactive" />

                    <Space android:layout_width="6dp" android:layout_height="8dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/dot_inactive" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- round next button -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_fab_primary"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/white"
                    android:contentDescription="@null"
                    tools:ignore="UseAppTint" />
            </LinearLayout>
        </FrameLayout>
    <!--</com.google.android.material.card.MaterialCardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>
