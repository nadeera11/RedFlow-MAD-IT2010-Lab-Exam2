<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EEF3"
    android:id="@+id/main">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Row: Menu, Search, Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu" />

                <!-- Search Box (Card) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F4F5F7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Search"
                            android:textColor="#9BA0A6"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Filter Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilter"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@color/rf_primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/baseline_tune_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp" />
            </LinearLayout>

            <!-- Map Preview (Card) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/illus_map_placeholder"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feature Grid (3x2) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="3"
                android:useDefaultMargins="true">

                <!-- Find Donors Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemFindDonor"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">

                        <ImageView
                            style="@style/HomeFeatureIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_drop" />
                        <TextView style="@style/HomeFeatureLabel" android:text="Find Donors"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Donate Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemDonate"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">
                        <ImageView style="@style/HomeFeatureIcon" android:src="@drawable/ic_hand_heart"/>
                        <TextView style="@style/HomeFeatureLabel" android:text="Donate"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Blood Bank Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemBank"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">
                        <ImageView style="@style/HomeFeatureIcon" android:src="@drawable/ic_bank"/>
                        <TextView style="@style/HomeFeatureLabel" android:text="Blood Bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Support Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemSupport"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">
                        <ImageView style="@style/HomeFeatureIcon" android:src="@drawable/ic_support"/>
                        <TextView style="@style/HomeFeatureLabel" android:text="Support"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Blood Request Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemRequest"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">
                        <ImageView style="@style/HomeFeatureIcon" android:src="@drawable/ic_request"/>
                        <TextView style="@style/HomeFeatureLabel" android:text="Blood Req..."/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- More Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/itemMore"
                    style="@style/HomeFeatureCard">
                    <LinearLayout style="@style/HomeFeatureCell">
                        <ImageView style="@style/HomeFeatureIcon" android:src="@drawable/ic_grid"/>
                        <TextView style="@style/HomeFeatureLabel" android:text="More"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Section Header: Blood Seeker -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blood Seeker"
                    android:textColor="#202020"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- Blood Seeker Card -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="238dp"
                    android:padding="14dp">

                    <!-- Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatarCard"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        app:cardBackgroundColor="#E9F3FF"
                        app:cardCornerRadius="22dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/seeker" />

                    </com.google.android.material.card.MaterialCardView>


                    <!-- Blood Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/badgeBloodCard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="@color/rf_primary"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="2dp">


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:text="B+"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Name + Description -->


                    <!-- Meta Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/avatarCard"
                        android:layout_alignStart="@id/avatarCard"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <!-- Bottom Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/badgeBloodCard"
                        android:layout_marginTop="70dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/rf_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" London, England"
                            android:textColor="#666" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDonate"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="96dp"
                            android:layout_height="40dp"
                            android:text="Donate"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            app:backgroundTint="@color/rf_primary"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="349dp"
                        android:text="James Peterson"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="318dp"
                        android:layout_height="69dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="106dp"
                        android:text="Lorem Ipsum is simply dummy text of the
printing and typesetting industry."
                        android:textSize="15dp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="match_parent" android:layout_height="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@android:color/white"
        app:itemIconTint="@drawable/selector_nav_tint"
        app:itemTextColor="@drawable/selector_nav_tint"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>