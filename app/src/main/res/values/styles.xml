<resources>
    <!-- Circular feature card -->
    <style name="HomeFeatureCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">#EFEFF3</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <!-- Inside each circle -->
    <style name="HomeFeatureCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="HomeFeatureIcon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:tint">@color/rf_primary</item>
    </style>

    <style name="HomeFeatureLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#333333</item>
    </style>



</resources>
